<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>rhymetime</groupId>
	<artifactId>rhymetime</artifactId>
	<name>RhymeTime</name>
	<packaging>jar</packaging>
	<version>1.0.0</version>

	<properties>
		<editables>RhymeAssistantImpl.java</editables>
		<testClasses>RhymeTimeTester.java</testClasses>
		<submitClasses>RhymeTimeTester</submitClasses>
		<testClassTimeout>15</testClassTimeout>
		<submitClassTimeout>20</submitClassTimeout>
		<author>Tobias Poll</author>
		<authorURL>http://www.first8.nl</authorURL>
		<displayName>RhymeTime</displayName>
		<icon>icon.ico</icon>
		<sponsorImage>sponsor.png</sponsorImage>
		<solution>RhymeAssistant.solution</solution>
		<fun>4/5</fun>
		<quality>3/5</quality>
		<difficulty>3/5</difficulty>
		<hint>Implement in small steps.</hint>
		<category>Fun</category>
		<solutiontime>1800</solutiontime>
		<testpenalties>true</testpenalties>
		<testcredits>false</testcredits>
	</properties>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.hamcrest/hamcrest-all -->
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-all</artifactId>
			<version>1.3</version>
			<scope>test</scope>
		</dependency>

	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
